<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AsistenciaMedica" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EditTextMultiLine">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextLogin" parent="EditText">
        <item name="android:background">@drawable/edit_text_login_background</item>
    </style>

    <style name="TextInputLayout">
        <item name="boxStrokeWidth">0dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewPrimary">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewSecondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ShimmerRecyclerView">
        <item name="shimmer_demo_angle">30</item>
        <item name="shimmer_demo_duration">1000</item>
        <item name="shimmer_demo_child_count">20</item>
        <item name="shimmer_demo_shimmer_color">#73FFFFFF</item>
    </style>

</resources>